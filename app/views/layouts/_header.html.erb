<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "くまもとんもん", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if logged_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          ユーザー情報 <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <% if current_user.admin? %>
              <li><%= link_to "ユーザー情報一覧", users_path %></li>
            <% end %>
            <li><%= link_to "ユーザー情報更新", edit_user_path(current_user) %></li>
            <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <% if current_user.admin? %>
            商品管理
          <% else %>
            お買い物 
          <% end %>
          <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
          <li><%= link_to "商品一覧", products_path %></li>
          <% if current_user.admin? %>
            <li><%= link_to "商品登録", new_product_path %></li>
          <% else %>
            <li><%= link_to "買い物かご", carts_path %></li>
            <li><%= link_to "履歴", history_path %></li>
          <% end %>
          </ul>
          <% if current_user.admin? %>
            <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            売り上げ情報 <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
            <li><%= link_to "売り上げ一覧", purchases_sales_path %></li>
            </ul>
          <% end %>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
