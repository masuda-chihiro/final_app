<% provide(:title, '商品登録') %>
<h1>商品登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product, url: products_path) do |f| %>
      <%= render 'shared/error_messages_for_products' %>

      <%= f.label :製造会社id %>
      <%= f.number_field :company_id, class: 'form-control' %>

      <%= f.label :商品名 %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :商品説明 %>
      <%= f.text_field :explanation, class: 'form-control' %>

      <%= f.label :価格 %>
      <%= f.number_field :price, class: 'form-control' %>

      <%= f.label :在庫 %>
      <%= f.number_field :stock, class: 'form-control' %>

      <%= f.submit "商品を登録する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>