<% provide(:title, '購入履歴') %>
<h1>購入履歴</h1>

<ul class="purchases">

<% @purchases.each do |purchase| %>
    <li>
    <p>商品番号　<%= link_to purchase.product_id %></p>
    <p>商品名　<%= link_to purchase.product.name, product_path(purchase.product.id) %></p>
    <p>単価　<%= link_to purchase.product.price %>円</p>
    <p>購入数　<%= link_to purchase.quantity %>個</p>
    <p>購入日時　<%= link_to purchase.updated_at.to_s(:datetime_jp) %></p>
    </li><br>
    <% end %>

<b><%= link_to "一覧に戻る", products_path %></b>
